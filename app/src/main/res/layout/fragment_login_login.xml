<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/login_EmailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_PasswordField"
        android:layout_marginBottom="50dp" />

    <EditText
        android:id="@+id/login_PasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_below="@+id/login_PasswordField"
        />

    <TextView
        android:id="@+id/TVtoRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/no_account"
        android:onClick="OnClick"
        android:layout_below="@id/btn_login"/>

    <TextView
        android:id="@+id/TV_Passwort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_PasswordField"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:text="Passwort"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/TV_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_EmailField"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:text="Email"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/TV_Willkommen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Willkommen bei HuSchKa!   Ihrem Einkaufsplaner"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        />


</RelativeLayout>