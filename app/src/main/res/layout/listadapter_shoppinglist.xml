<?xml version="1.0" encoding="utf-8"?>
<!-- Listadapter für eine Einkaufsliste -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">

        <TextView
            android:id="@+id/TVdatumShoppingList"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="DefaultDate"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/colorDunkelTuerkis"/>

        <TextView
            android:id="@+id/TVsupermarketShoppingList"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Supermarkt"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/colorDunkelTuerkis"
            android:textColor="@color/colorWeiß"/>

    </LinearLayout>


    <TextView
        android:id="@+id/TVstatusShoppingList"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="5"
        android:text="Status"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorSehrDunkelTuerkis"
        android:textStyle="italic"
        android:textSize="20dp"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"/>

</LinearLayout>