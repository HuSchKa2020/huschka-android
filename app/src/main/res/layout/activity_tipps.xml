<?xml version="1.0" encoding="utf-8"?>
<!--    Layout für die Activity in der alle Tipps&Tricks angezeigt werden.
        Zugehörige Klasse: /Activities/AddProductsToListActivity -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        app:titleTextColor="@color/colorWeiß"
        android:background="@color/colorDunkelTuerkis"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Tipps und Tricks"
        android:background="@color/colorDunkelTuerkis"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorWeiß"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>


    <ListView
       android:id="@+id/LV_Tipps"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentTop="true"
       android:layout_marginTop="100dp"
       />

</RelativeLayout>