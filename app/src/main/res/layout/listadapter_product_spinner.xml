<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_of_product"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/TV_adapter_productName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Produktname"
            android:textColor="@color/colorSehrDunkelTuerkis"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TV_adapter_productPreis"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Preis"
            android:textColor="@color/colorSehrDunkelTuerkis"
            android:textAlignment="center" />


    </LinearLayout>

   <Spinner
       android:id="@+id/spinner_ProduktAnzahl"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_weight="2"
       android:textAlignment="center"
       android:gravity="center" />



</LinearLayout>
