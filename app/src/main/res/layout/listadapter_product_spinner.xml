<?xml version="1.0" encoding="utf-8"?>
<!-- Listadapter für ein Produkt mit Bild, Name, Preis und zur Auswahl der Anzahl -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/rahmen_nicht_ganz_dunkel">

    <ImageView
        android:id="@+id/image_of_product"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="20"
        android:src="@drawable/test_bild"
        android:padding="3dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_weight="10"
        android:padding="3dp">

        <TextView
            android:id="@+id/TV_adapter_productName"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Produktname"
            android:textColor="@color/colorWeiß"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/colorDunkelTuerkis" />

        <TextView
            android:id="@+id/TV_adapter_productPreis"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Preis"
            android:textColor="@color/colorDunkelTuerkis"
            android:textAlignment="center" />


    </LinearLayout>

   <Spinner
       android:id="@+id/spinner_ProduktAnzahl"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_weight="16"
       android:textAlignment="center"
       android:gravity="center"
        />



</LinearLayout>
