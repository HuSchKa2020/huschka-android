<?xml version="1.0" encoding="utf-8"?>
<!--    Layout für das Impressum.
        Zugehörige Klasse: -/- -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        app:titleTextColor="@color/colorWeiß"
        android:background="@color/colorDunkelTuerkis"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Impressum"
        android:background="@color/colorDunkelTuerkis"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorWeiß"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:text="HuSchKa"
        android:layout_marginStart="40dp"
        android:textSize="15dp"
        android:textColor="@color/colorSehrDunkelTuerkis"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:text="Straße 1"
        android:layout_marginStart="40dp"
        android:textSize="15dp"
        android:textColor="@color/colorSehrDunkelTuerkis"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:text="12345 Ort"
        android:layout_marginStart="40dp"
        android:textSize="15dp"
        android:textColor="@color/colorSehrDunkelTuerkis"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:text="Kontakt"
        android:layout_marginStart="40dp"
        android:textSize="15dp"
        android:textColor="@color/colorSehrDunkelTuerkis"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:text="Telefon: 0123456789"
        android:layout_marginStart="40dp"
        android:textSize="15dp"
        android:textColor="@color/colorSehrDunkelTuerkis"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:text="E-Mail: huschka@gmx.de"
        android:layout_marginStart="40dp"
        android:textSize="15dp"
        android:textColor="@color/colorSehrDunkelTuerkis"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="340dp"
        android:text="Registernummer "
        android:layout_marginStart="40dp"
        android:textSize="15dp"
        android:textColor="@color/colorSehrDunkelTuerkis"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="370dp"
        android:text="Registergericht: Amtsgericht Ort"
        android:layout_marginStart="40dp"
        android:textSize="15dp"
        android:textColor="@color/colorSehrDunkelTuerkis"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        android:text="USt-ID: DE123456789"
        android:layout_marginStart="40dp"
        android:textSize="15dp"
        android:textColor="@color/colorSehrDunkelTuerkis"/>








</RelativeLayout>
