<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/register_NachnameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="120dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="490dp" />

    <EditText
        android:id="@+id/register_VornameField"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="490dp" />

    <EditText
        android:id="@+id/register_PasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="440dp"
        android:hint="@string/register_Passwort"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/register_PasswordField2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="520dp"
        android:hint="@string/register_Passwort_Wiederholen"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/register_Stadt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="410dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="20dp"
        android:ems="10" />

    <EditText
        android:id="@+id/register_EmailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/register_Straße"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="330dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="280dp" />

    <EditText
        android:id="@+id/register_Hausnummer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="330dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/register_Postleitzahl"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="410dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:inputType="number" />


    <Button
        android:id="@+id/btn_register_Passwort_anzeigen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="520dp"
        android:background="@color/colorPrimaryDark"
        android:text="Anzeigen"
        android:textColor="@color/colorSehrDunkelTuerkis" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="590dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorDunkelTuerkis"
        android:text="@string/register"
        android:textColor="@color/colorSehrDunkelTuerkis" />

    <TextView
        android:id="@+id/TVtoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="635dp"
        android:text="@string/exist_account"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/TV_register_Vorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="540dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="300dp"
        android:text="@string/register_Vorname"
        android:textColor="@color/colorDunkelTuerkis" />

    <TextView
        android:id="@+id/TV_register_Nachname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="540dp"
        android:layout_marginTop="100dp"
        android:text="@string/register_Nachname"
        android:textColor="@color/colorDunkelTuerkis" />

    <TextView
        android:id="@+id/TV_register_Passwort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="220dp"
        android:text="@string/register_Passwort"
        android:textColor="@color/colorDunkelTuerkis" />

    <TextView
        android:id="@+id/TV_register_Passwort_wiederholen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="140dp"
        android:text="@string/register_Passwort_Wiederholen"
        android:textColor="@color/colorDunkelTuerkis" />

    <TextView
        android:id="@+id/TV_register_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:layout_marginTop="340dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/register_Email"
        android:textColor="@color/colorDunkelTuerkis" />

    <TextView
        android:id="@+id/TV_register_Straße"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="380dp"
        android:layout_marginTop="260dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="200dp"
        android:text="@string/register_Straße"
        android:textColor="@color/colorDunkelTuerkis" />

    <TextView
        android:id="@+id/TV_register_Hausnummer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="380dp"
        android:layout_marginTop="260dp"
        android:layout_marginStart="325dp"
        android:layout_marginEnd="20dp"
        android:text="@string/register_Hausnummer"
        android:textColor="@color/colorDunkelTuerkis" />

    <TextView
        android:id="@+id/TV_register_Postleitzahl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="460dp"
        android:layout_marginTop="180dp"
        android:text="@string/register_Postleitzahl"
        android:textColor="@color/colorDunkelTuerkis" />

    <TextView
        android:id="@+id/TV_register_Stadt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="460dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="20dp"
        android:text="@string/register_Stadt"
        android:textColor="@color/colorDunkelTuerkis" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="600dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="@string/register_ueberschrift"
        android:textAlignment="center"
        android:textColor="@color/colorSehrDunkelTuerkis"
        android:textSize="25dp" />

</RelativeLayout>