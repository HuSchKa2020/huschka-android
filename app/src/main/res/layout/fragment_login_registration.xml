<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/register_NachnameField"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_Postleitzahl"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="50dp" />

    <EditText
        android:id="@+id/register_VornameField"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_Stadt"
        android:layout_marginBottom="50dp" />

    <EditText
        android:id="@+id/register_PasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_PasswordField2"
        android:layout_marginBottom="50dp" />

    <EditText
        android:id="@+id/register_PasswordField2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_register"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TVtoLogin"
        android:layout_marginBottom="2dp"
        android:text="@string/register" />

    <TextView
        android:id="@+id/TVtoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="3dp"
        android:text="@string/exist_account" />

    <TextView
        android:id="@+id/TV_vorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_VornameField"
        android:layout_alignEnd="@+id/register_VornameField"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:text="Vorname" />

    <TextView
        android:id="@+id/TV_vorname2"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_NachnameField"
        android:layout_alignStart="@+id/register_NachnameField"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:text="Nachname" />

    <TextView
        android:id="@+id/TV_passwort"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_PasswordField"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="10dp"
        android:text="Passwort" />

    <TextView
        android:id="@+id/TV_email"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_EmailField"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="10dp"
        android:text="E-Mail" />

    <TextView
        android:id="@+id/TV_passwort_wiederholen"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_PasswordField2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="10dp"
        android:text="Passwort wiederholen" />

    <EditText
        android:id="@+id/register_EmailField"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_PasswordField"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/register_Straße"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/register_EmailField"
        android:layout_marginBottom="50dp" />

    <EditText
        android:id="@+id/register_Hausnummer"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_EmailField"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/register_Straße"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/TV_Straße"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_Straße"
        android:layout_alignEnd="@+id/register_Straße"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:text="Straße" />

    <TextView
        android:id="@+id/TV_Hausnummer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_Hausnummer"
        android:layout_alignStart="@+id/register_Hausnummer"
        android:layout_alignEnd="@+id/register_Hausnummer"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:text="Nr." />

    <EditText
        android:id="@+id/register_Stadt"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_Straße"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/TV_Stadt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_Stadt"
        android:layout_alignEnd="@+id/register_Stadt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:text="Stadt" />

    <EditText
        android:id="@+id/register_Postleitzahl"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_Hausnummer"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/register_Stadt"
        android:ems="10"
        android:inputType="number" />


    <TextView
        android:id="@+id/TV_Postleitzahl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_Postleitzahl"
        android:layout_alignStart="@+id/register_Postleitzahl"
        android:layout_alignEnd="@+id/register_Postleitzahl"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:text="Postleitzahl" />

</RelativeLayout>