<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/productImage"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/test_bild"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"
        android:padding="3dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/TVproduktName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Name"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/colorWeiÃŸ"
            android:background="@color/colorDunkelTuerkis"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/TVproduktPrice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:text="Preis"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorDunkelTuerkis"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"/>

</LinearLayout>