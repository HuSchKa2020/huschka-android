<?xml version="1.0" encoding="utf-8"?>
<!--    Layout für die Activity für die Detailansicht eines Produktes.
        Zugehörige Klasse: /Activities/ProductInfoActivity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProductInfoActivity"
    android:orientation="horizontal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addListToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorDunkelTuerkis"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/produktInfo"
        />

    <TextView
        android:id="@+id/TVproductID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TV_Produktsuche_Hersteller_Ueberschrift"
        android:layout_marginBottom="-9dp"
        android:textAlignment="center"
        android:textColor="@color/colorDunkelTuerkis"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/IV_Produktsuche_Bild"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/addListToolbar"
        android:layout_marginTop="10dp"
        android:src="@drawable/test_bild"/>

    <TextView
        android:id="@+id/TV_Produktsuche_Hersteller_Ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IV_Produktsuche_Bild"
        android:layout_marginTop="10dp"
        android:background="@color/colorDunkelTuerkis"
        android:text="@string/Produktinfo_Hersteller"
        android:textAlignment="center"
        android:textColor="@color/colorWeiß"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TVproductHersteller"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/TV_Produktsuche_Hersteller_Ueberschrift"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorDunkelTuerkis"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"
        android:gravity="center"/>

    <TextView
        android:id="@+id/TV_Produktsuche_Name_Ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVproductHersteller"
        android:layout_marginTop="0dp"
        android:background="@color/colorDunkelTuerkis"
        android:text="@string/Produktinfo_Produktname"
        android:textAlignment="center"
        android:textColor="@color/colorWeiß"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TVproductName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/TV_Produktsuche_Name_Ueberschrift"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorDunkelTuerkis"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"
        android:gravity="center"/>


    <TextView
        android:id="@+id/TV_Produktsuche_Kategorie_Ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVproductName"
        android:layout_marginTop="0dp"
        android:background="@color/colorDunkelTuerkis"
        android:text="@string/Produktinfo_Kategorie"
        android:textAlignment="center"
        android:textColor="@color/colorWeiß"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TVproductKategorie"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/TV_Produktsuche_Kategorie_Ueberschrift"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorDunkelTuerkis"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"
        android:gravity="center"/>

    <TextView
        android:id="@+id/TV_Produktsuche_Preis_Ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVproductKategorie"
        android:layout_marginTop="0dp"
        android:background="@color/colorDunkelTuerkis"
        android:text="@string/Produktinfo_Preis"
        android:textAlignment="center"
        android:textColor="@color/colorWeiß"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TVproductPreis"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/TV_Produktsuche_Preis_Ueberschrift"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorDunkelTuerkis"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"
        android:gravity="center"/>

    <TextView
        android:id="@+id/TV_Produktsuche_Kcal_Ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVproductPreis"
        android:layout_marginTop="0dp"
        android:background="@color/colorDunkelTuerkis"
        android:text="@string/Produktinfo_Kcal"
        android:textAlignment="center"
        android:textColor="@color/colorWeiß"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TVproductKcal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/TV_Produktsuche_Kcal_Ueberschrift"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorDunkelTuerkis"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"
        android:gravity="center"/>

    <TextView
        android:id="@+id/TV_Produktsuche_Ernaehrungsform_Ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVproductKcal"
        android:layout_marginTop="0dp"
        android:background="@color/colorDunkelTuerkis"
        android:text="@string/Produktinfo_Ernaehrungsform"
        android:textAlignment="center"
        android:textColor="@color/colorWeiß"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TVproductErnaehrungsform"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/TV_Produktsuche_Ernaehrungsform_Ueberschrift"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorDunkelTuerkis"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"
        android:gravity="center"/>

    <TextView
        android:id="@+id/TV_Produktsuche_GesundheitsScore_Ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVproductErnaehrungsform"
        android:layout_marginTop="0dp"
        android:background="@color/colorDunkelTuerkis"
        android:text="@string/Produktinfo_GesundheitsScore"
        android:textAlignment="center"
        android:textColor="@color/colorWeiß"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TVproductGesundheitsScore"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/TV_Produktsuche_GesundheitsScore_Ueberschrift"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorDunkelTuerkis"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"
        android:gravity="center"/>

    <TextView
        android:id="@+id/TV_Produktsuche_UmweltScore_Ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVproductGesundheitsScore"
        android:layout_marginTop="0dp"
        android:background="@color/colorDunkelTuerkis"
        android:text="@string/Produktinfo_UmweltScore"
        android:textAlignment="center"
        android:textColor="@color/colorWeiß"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TVproductUmweltScore"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/TV_Produktsuche_UmweltScore_Ueberschrift"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorDunkelTuerkis"
        android:background="@drawable/rahmen_nicht_ganz_dunkel"
        android:gravity="center"/>
</RelativeLayout>